
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AddToken" table="sh_network_token">
        <id name="token_id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="networkname" type="string" />
        <field name="auth_token" type="string" />
        <field name="auth_secret" type="string" />
        <field name="user_id" type="integer" />
        <field name="screen_name" type="string" />
        <field name="screen_id" type="string" />
        <field name="count" type="integer" />
    </entity>
</doctrine-mapping>
