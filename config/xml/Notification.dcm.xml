
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Notification" table="notifications">
        <id name="id_notifications" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="id_user" type="integer" />
        <field name="id_friend" type="integer" />
        <field name="type" type="integer" />
        <field name="message" type="string" />
        <field name="readed" type="integer" />
        <field name="date" type="string" />
        
      
    </entity>
</doctrine-mapping>
